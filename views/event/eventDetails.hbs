{{#with event}}
	<h1> Information about {{ title }} </h1>
	<h2> Event created by: {{ creator.username }}</h2>
	<h2>Details:</h2>
	<p>{{ description }}</p>

	<p> From: {{ timeAndDate.starting }}</p>
	<p> To: {{ timeAndDate.ending }}</p>

	<p>Location: {{ location }}</p>

	<p>Address: {{address.street}} {{address.houseNumber}} {{address.postcode}} {{address.city}} {{address.country}}</p>

	<p>Sports: {{ sports }}</p>

	{{!-- these are used by mapbox.js to center the map --}}
	<div id='hiddenLat' style='display: none'>{{ coordinates.latitude }}</div>
	<div id='hiddenLon' style='display: none'>{{ coordinates.longitude }}</div>
{{/with}}
	<div id='hiddenPositions' style='display: none'>{{positions}}</div>

<p>{{{editLink}}}</p>

	<h2> <a href="/events">Back to all events </a></h2>
	<div id='map' style='width: 400px; height: 300px;'></div>
	<script src="/js/mapbox.js"></script>
